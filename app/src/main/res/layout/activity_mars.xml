<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/stars_wallpaper3"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".Earth">



    <ImageView
        android:id="@+id/earth_button"
        android:layout_width="181dp"
        android:layout_height="190dp"
        android:src="@drawable/mars_rotation" />

<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/moon_button1"
        android:layout_width="93dp"
        android:layout_height="51dp"
        android:src="@drawable/Diemos" />
    <ImageView
        android:id="@+id/moon_button2"
        android:layout_width="93dp"
        android:layout_height="51dp"
        android:src="@drawable/phobos" />
</LinearLayout>

    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>